<UserControl x:Class="Familiada.View.Strasburger"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Familiada.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="250">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{Binding Saying, Mode=OneWay}" TextWrapping="Wrap" Grid.Row="0"/>   <!--Wypowiedzi Strasburgera--> 
        
        <Image Grid.Row="1"/>       <!--Animowany Strasburger-->

    </Grid>
</UserControl>
